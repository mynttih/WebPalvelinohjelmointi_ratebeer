<h2>List of ratings</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Beer</th>
      <th>Rating</th>
      <th>Rater</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.beer.name %></td>
        <td><%= rating.score %></td>
        <td><%= link_to rating.user.username, user_path(rating.user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p> Number of ratings: <%= @ratings.count %> </p>

<% if current_user %>
  <%= link_to 'New rating', new_rating_path%>
<% end %>